{
    "description": "Bollemann Gaming Mod for Opera GX Browser",
    "developer":
    {
        "name": "n1ccc.dev"
    },
    "icons":
    {
        "512": "ressources/icons/icon_512.png"
    },
    "manifest_version": 3,
    "mod":
    {
        "license": "license.txt",
        "payload":
        {
            "page_styles":
            [
                {
                    "css":
                    [
                        "ressources/webmodding/opera.css"
                    ],
                    "matches":
                    [
                        "https://*.opera.com/*"
                    ]
                }
            ],
            "shaders":
            {
                "Matrix green":
                {
                    "path": "ressources/shader/matrix.txt"
                },
                "Wave":
                {
                    "animation":
                    {
                        "duration": 60,
                        "steps": 3600
                    },
                    "path": "ressources/shader/wave.txt"
                }
            },
            "theme":
            {
                "dark":
                {
                    "gx_accent":
                    {
                        "h": 192,
                        "s": 100,
                        "l": 60
                    },
                    "gx_secondary_base":
                    {
                        "h": 211,
                        "s": 64,
                        "l": 16
                    }
                },
                "light":
                {
                    "gx_accent":
                    {
                        "h": 211,
                        "s": 64,
                        "l": 16
                    },
                    "gx_secondary_base":
                    {
                        "h": 182,
                        "s": 32,
                        "l": 40
                    }
                }
            },
            "wallpaper":
            {
                "dark":
                {   
                    "image": "ressources/wallpaper/dark.png",
                    "text_color": "#FFFFFF",
                    "text_shadow": "#757575"
                },
                "light":
                {
                    "image": "ressources/wallpaper/light.png",
                    "text_color": "#000000",
                    "text_shadow": "#0B000E"
                }
            }
        },
        "schema_version": 1
    },
    "name": "BollemannGX",
    "version": "1.0"
}